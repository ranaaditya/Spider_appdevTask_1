<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/constr"
    android:background="#000000"
    tools:context=".MainActivity">

 <ImageView
     android:id="@+id/stone1"
     android:layout_width="50dp"
     android:layout_height="50dp"
     android:layout_marginTop="8dp"
     android:layout_marginEnd="12dp"
     android:layout_marginBottom="8dp"
     android:src="@drawable/soul"
     app:layout_constraintBottom_toBottomOf="parent"
     app:layout_constraintEnd_toStartOf="@+id/stone4"
     app:layout_constraintTop_toTopOf="parent"
     app:layout_constraintVertical_bias="0.989" />

 <ImageView
     android:id="@+id/stone2"
     android:layout_width="50dp"
     android:layout_height="50dp"
     android:layout_marginStart="16dp"
     android:layout_marginTop="8dp"
     android:layout_marginEnd="8dp"
     android:layout_marginBottom="8dp"
     android:src="@drawable/time"
     app:layout_constraintBottom_toBottomOf="parent"
     app:layout_constraintEnd_toStartOf="@+id/stone1"
     app:layout_constraintHorizontal_bias="0.0"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toTopOf="parent"
     app:layout_constraintVertical_bias="0.988" />

 <ImageView
     android:id="@+id/stone3"
     android:layout_width="50dp"
     android:layout_height="50dp"
     android:layout_marginTop="8dp"
     android:layout_marginEnd="20dp"
     android:layout_marginBottom="16dp"
     android:src="@drawable/space"
     app:layout_constraintBottom_toBottomOf="parent"
     app:layout_constraintEnd_toStartOf="@+id/stone5"
     app:layout_constraintTop_toTopOf="parent"
     app:layout_constraintVertical_bias="1.0" />

 <ImageView
     android:id="@+id/stone4"
     android:layout_width="50dp"
     android:layout_height="50dp"
     android:layout_marginTop="8dp"
     android:layout_marginEnd="24dp"
     android:layout_marginBottom="8dp"
     android:src="@drawable/mind"
     app:layout_constraintBottom_toBottomOf="parent"
     app:layout_constraintEnd_toStartOf="@+id/stone3"
     app:layout_constraintTop_toTopOf="parent"
     app:layout_constraintVertical_bias="0.989" />

 <ImageView
     android:id="@+id/stone5"
     android:layout_width="50dp"
     android:layout_height="50dp"
     android:layout_marginTop="8dp"
     android:layout_marginEnd="24dp"
     android:layout_marginBottom="16dp"
     android:src="@drawable/reality"
     app:layout_constraintBottom_toBottomOf="parent"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintTop_toTopOf="parent"
     app:layout_constraintVertical_bias="1.0"/>
 <ImageView
     android:id="@+id/click"
     android:onClick="gamestart"
     android:layout_width="match_parent"
     android:layout_height="match_parent" />

</android.support.constraint.ConstraintLayout>